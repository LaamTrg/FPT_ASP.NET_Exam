@model IEnumerable<Product.Models.Product>

<h1>All Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price Per Day</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Author</td>
                <td>@product.PricePerDay</td>
            </tr>
        }
    </tbody>
</table>