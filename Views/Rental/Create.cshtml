@model Product.Models.Rental

<h1>Create Rental</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.Customers, "CustomerId", "FullName"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="ProductId">Product</label>
        <select asp-for="RentalDetails[0].ProductId" asp-items="@(new SelectList(ViewBag.Products, "ProductId", "Title"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input asp-for="RentalDetails[0].Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>